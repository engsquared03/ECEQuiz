<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="ECE Quiz"
        android:fontFamily="@font/fredoka_one_regular"
        android:textColor="@color/colorBlack"
        android:textSize="60dp" />
    <Button
        android:id="@+id/btn_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/acme_regular"
        android:background="@drawable/boarder_green"
        android:textColor="@color/colorWhite"
        android:text="Quiz"
        android:textAllCaps="false"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/acme_regular"
        android:background="@drawable/boarder_green"
        android:textColor="@color/colorWhite"
        android:text="Custom"
        android:textAllCaps="false"
        android:textSize="24sp" />
    <Button
        android:id="@+id/btn_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/acme_regular"
        android:layout_gravity="left"
        android:layout_marginHorizontal="60dp"
        android:background="@drawable/boarder_green"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="15dp"
        android:text="Stats"
        android:textAllCaps="false"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginHorizontal="60dp"
        android:fontFamily="@font/acme_regular"
        android:background="@drawable/boarder_green"
        android:layout_marginTop="15dp"
        android:text="History"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:fontFamily="@font/acme_regular"
        android:background="@drawable/boarder_green"
        android:layout_marginTop="15dp"
        android:text="Setting"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/layout_activitaion">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activated:    "
            android:fontFamily="@font/acme_regular"/>
        <ImageView
            android:id="@+id/image_view_activation"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/incorrect"/>

    </LinearLayout>

</LinearLayout>