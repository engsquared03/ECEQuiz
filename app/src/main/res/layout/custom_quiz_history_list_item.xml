<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/layout_history_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/custom_quiz_history_item_subject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:ellipsize="end"
                android:fontFamily="@font/acme_regular"
                android:maxLines="1"
                android:text="General Engineering and Applied Sciences"
                android:textColor="@color/colorBlack"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/custom_quiz_history_item_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_bold"
                android:gravity="right"
                android:maxLines="1"
                android:text="10/10"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/custom_quiz_history_item_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:fontFamily="@font/times"
            android:includeFontPadding="true"
            android:text="1.  Which agency developed standards for physical connection interfaces and electronic signaling specifications?"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/custom_quiz_history_item_quiz_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_light"
            android:maxLines="1"
            android:text="Sample Quiz"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/custom_quiz_history_item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Sat, 20 Jun 2020  12:45 PM"
            android:textSize="10sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>