<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="350dp"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/border_white_fill"
    android:layout_gravity="center"
    >

    <ImageButton
        android:id="@+id/image_btn_close_popup_notes"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/close_icon_red"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingTop="55dp"
        android:paddingRight="5dp"
        android:paddingLeft="10dp"
        android:background="@drawable/notes_frame_2">

        <EditText
            android:id="@+id/edit_text_popup_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="Write your notes here"
            android:textSize="14sp"
            android:layout_below="@id/image_btn_close_popup_notes"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/colorBlack"
            android:layout_marginBottom="35dp"
            />

    </LinearLayout>

</RelativeLayout>