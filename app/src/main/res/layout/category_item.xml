<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/category_item_layout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/category_item_category"
                android:layout_width="0dp"
                android:layout_weight="5.5"
                android:layout_height="wrap_content"
                android:fontFamily="@font/acme_regular"
                android:text="Electronics System and Technologies"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/category_item_stats"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/acme_regular"
                android:gravity="right"
                android:text="100%"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/category_item_number_of_questions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/category_item_layout"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/roboto_light"
            android:layout_marginTop="2dp"
            android:text="Number of questions: 100"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/category_item_number_of_questions_used"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/category_item_layout"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/roboto_light"
            android:layout_marginTop="2dp"
            android:text="Number of questions used: 100"
            android:textSize="8sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>